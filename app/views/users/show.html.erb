


<div class="container-fluid bg-dark">
    <div class="row">
      <div class="container d-flex p-5 mx-5">
        <div class="col-2">
          <%= cl_image_tag @user.photo.key, height: 150, width: 150, crop: :fill, class: 'rounded-circle' %>
        </div>


        <div class="col-4 text-light">
          <h1><%= @user.first_name %> <%= @user.last_name%></h1>
          <h3><%= @user.minibio %></h3>
          <p><%= @user.phone%></p>
          <p><%= @user.city %></p>
        </div>

        <div class="my-5 col-6">
          <p><%= @user.bio %></p>
        </div>
      </div>
    </div>
  </div>



<div class="container p-4">
  <div class="row">
    <% @user.mentorships.each do |mentorship| %>
      <div class="card-trip col-3 p-0 hover">
          <%= cl_image_tag mentorship.photo.key %>
          <div class="card-trip-infos">
            <div>
              <h2 class="my-2"><%= link_to mentorship.title, mentorship_path(mentorship), class:"text-decoration-none text-black"%></h2>
              <p><%= mentorship.content %></p>
            </div>

            </div>
          </div>
    <% end %>
  </div>
</div>
