
<div>
  <div class="container-fluid bg-dark">


    <div class="row">
      <div class="container d-flex p-5 mx-5 justify-content-around">

        <div class="container d-flex justify-content-start col-6">
          <div class="mx-5">
            <%= cl_image_tag @user.photo.key, height: 150, width: 150, crop: :fill, class: 'rounded-circle' %>
          </div>


          <div class="text-light">
            <h1><%= @user.first_name %> <%= @user.last_name%></h1>
            <p>    <i class="fa-sharp fa-solid fa-location-dot"></i>  <%=    @user.phone%></p>
            <p> <i class="fa-sharp fa-solid fa-phone"></i> <%= @user.city %></p>
            <p> <i class="fa-sharp fa-solid fa-envelope"></i> <%= @user.email %></p>
          </div>
        </div>

        <div class="container d-flex">
          <div class="col-6 mt-3">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container d-flex">
    <div class="col-6 justify-content-center text-black my-4 mx-5">
      <div class="row">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title ms-5 my-2"><%= @user.minibio %></h5>
              <p class="card-text px-5 py-3"><%= @user.bio %></p>
            </div>
          </div>
      </div>
    </div>


    <div class="container p-4">
      <div class="row text-black">
        <h2>Projetos desse mentor:</h2>
        <% @user.mentorships.each do |mentorship| %>
          <div class="card-trip p-0 hover">
              <%= cl_image_tag mentorship.photo.key %>
              <div class="card-trip-infos text-wrap">
                <div>
                  <h2 class="my-2"><%= link_to mentorship.title, mentorship_path(mentorship), class:"text-decoration-none text-black"%></h2>
                  <p><%= mentorship.content %></p>
                </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
