
<div class="container mt-5">

  <div class="row">

    <div class="col-8">
      <h1 class="mb-0"><%= @mentorship.title %></h1>
      <p class="text-secondary mt-1">A course by <%= link_to @mentorship.user.first_name , user_path(@mentorship.user) , class: 'text-secondary'%></p>
      <div class="px-4 py-2 my-3" style="background-color: #FBE5D6; border-radius: 5px">
        <span>Where: <%= @mentorship.address %></span>
        <p>About: </p>

      </div>
      <div>
        <%= cl_image_tag @mentorship.photo.key, class: 'w-100 my-4', crop: :fill%>
      </div>
      <h4 class="text-secondary">About this Mentorship </h4>
      <p class="text-secondary-emphasis"><%= @mentorship.content %></p>
    </div>

    <div class="col-4 bg-secondary-subtle p-4 shadow">
      <div class="row">
        <div class="col-8">
          <h3><%= @mentorship.user.first_name %></h3>
          <h5><%= @mentorship.user.last_name %></h5>
        </div>
        <div class="col-4">
          <%= cl_image_tag @mentorship.user.photo.key, height: 80, width: 80, crop: :fill, class: 'rounded-circle' %>
        </div>
      </div>
      <h3>R$ 499</h3>
      <p>40% OFF</p>
      <p><% @mentorship.tags.each do |tag| %>
        <span><%= tag.name %></span>
        <%end%>
      </p>
      <% if @mentorship_owner %>
        <button class="btn btn-primary"><%= link_to 'Edit', edit_mentorship_path(@mentorship), class: 'text-light text-decoration-none' %></button>
        <%= button_to 'Delete', mentorship_path(@mentorship), method: :delete, class: 'btn btn-danger ml-2' %>
      <% else %>
        <button class="btn btn-primary"><%= link_to "Booking this mentor", new_mentorship_booking_path(@mentorship) , class: 'text-light text-decoration-none'%></button>
      <% end %>
      <%= link_to 'Book your Mentorship!', new_mentorship_booking_path(@mentorship) %>
    </div>

  </div>

</div>
